@model OMP.Offers.Offers.OfferReportData
@using System.Linq;

@if ((bool?)ViewData["Printing"] == true)
{
    Layout = MVC.Views.Shared._LayoutNoNavigation;
}

<section class="invoice">
    @foreach (var category in Model.OfferCategories)
    {
        <ul>
            <li>
                @category.CategoryNameReport
                
                <ul>
                    @foreach (var task in Model.OfferCategoryTasks.Where(octs => octs.OfferCategoryId == category.CategoryId))
                    {
                        <li>
                            @task.Name
                        </li>
                    }
                </ul>
            </li>
        </ul>
    }
</section>